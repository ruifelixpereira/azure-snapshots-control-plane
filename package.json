{
  "name": "snap-mng-function-app",
  "version": "1.0.18",
  "description": "SMCP - Snapshot Management Control Plane Function App",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "tsc",
    "build:patch": "npm version patch --no-git-tag-version && npm run build",
    "build:minor": "npm version minor --no-git-tag-version && npm run build",
    "build:major": "npm version major --no-git-tag-version && npm run build",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build:patch",
    "start": "func start",
    "start-verbose": "func start --verbose",
    "test": "echo \"No tests yet...\""
  },
  "devDependencies": {
    "@types/node": "20.x",
    "azure-functions-core-tools": "^4.x",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@azure/arm-compute": "^23.0.0",
    "@azure/arm-locks": "^2.1.0",
    "@azure/arm-network": "^34.0.0",
    "@azure/arm-resourcegraph": "^4.2.1",
    "@azure/functions": "^4.8.0",
    "@azure/identity": "^4.12.0",
    "@azure/monitor-ingestion": "^1.2.0",
    "@azure/monitor-query-logs": "^1.0.0",
    "@azure/storage-queue": "^12.27.0",
    "axios": "^1.12.2",
    "durable-functions": "^3.2.0",
    "jsonpath-plus": "^10.3.0",
    "lodash": "^4.17.21"
  }
}
